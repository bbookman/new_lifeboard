#USER CONFIGS
USERS_LANGUAGE=en
TIME_ZONE=America/New_York


# Limitless Search Configuration (double underscores are not a typo)
LIMITLESS_API_KEY=your key here

# Limitless Search Configuration
LIMITLESS__SEARCH_ENABLED=true
LIMITLESS__SEARCH_WEIGHT=0.75

# Limitless Rate Limiting Configuration
LIMITLESS__MAX_RETRIES=4
LIMITLESS__RATE_LIMIT_MAX_ROUNDS=3
LIMITLESS__RATE_LIMIT_ROUND_DELAY=30.0

# Rapid API (news, weather, billboard charts..)
RAPID_API_KEY=your-rapid-api-key-here


# News API Configuration
TURN_ON_NEWS=true
NEWS_COUNTRY=US
UNIQUE_NEWS_ITEMS_PER_DAY=5
NEWS_ENDPOINT=real-time-news-data.p.rapidapi.com
NEWS_ITEMS_TO_RETRIEVE=20

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/lifeboard.log
LOG_CONSOLE_LOGGING=true

# Auto-sync Configuration
AUTO_SYNC_ENABLED=true
LIMITLESS_SYNC_INTERVAL_HOURS=6

# ===== Phase 6: LLM and Chat Capabilities =====

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# Startup Embedding Burst Configuration
EMBEDDING_STARTUP_BURST_ENABLED=true
EMBEDDING_STARTUP_BURST_LIMIT=150

# Text Processing and Keyword Search Configuration
TEXT_PROCESSING_MIN_KEYWORD_LENGTH=2
TEXT_PROCESSING_MAX_KEYWORD_LENGTH=50
TEXT_PROCESSING_SEARCH_MODE=OR
TEXT_PROCESSING_MAX_KEYWORDS=10
TEXT_PROCESSING_ENABLE_STEMMING=true
# TEXT_PROCESSING_CUSTOM_STOP_WORDS=myword1,myword2,myword3
TEXT_PROCESSING_VERBOSE_LOGGING=false
TEXT_PROCESSING_ENABLE_CHAT_SUMMARY=true
TEXT_PROCESSING_SUMMARY_TRUNCATION_LENGTH=100

# LLM Provider Selection (ollama or openai)
LLM_PROVIDER=ollama

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=60.0
OLLAMA_MAX_RETRIES=3

# OpenAI Configuration (for cloud LLM)
# OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=60.0
OPENAI_MAX_RETRIES=3
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Chat Interface Configuration
CHAT_ENABLED=true
CHAT_HISTORY_LIMIT=1000
CHAT_CONTEXT_WINDOW=4000
CHAT_RESPONSE_TIMEOUT=30.0


# Twitter Integration  
# TWITTER_DATA_PATH=/path/to/twitter/export
# TWITTER_ENABLED=true
# TWITTER_SYNC_INTERVAL_HOURS=24