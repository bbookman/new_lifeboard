# Limitless API Configuration
LIMITLESS_API_KEY=your key here


# Rapid API (news, weather, billboard charts..)
RAPID_API_KEY=your-rapid-api-key-here


# News API Configuration
RAPID_API_KEY=your-rapid-api-key-here
USERS_LANGUAGE=en
TURN_ON_NEWS=true
NEWS_COUNTRY=US
UNIQUE_NEWS_ITEMS_PER_DAY=5
NEWS_ENDPOINT=real-time-news-data.p.rapidapi.com
NEWS_ITEMS_TO_RETRIEVE=20

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/lifeboard.log
LOG_CONSOLE_LOGGING=true

# Auto-sync Configuration
AUTO_SYNC_ENABLED=true
LIMITLESS_SYNC_INTERVAL_HOURS=6

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=mps
EMBEDDING_BATCH_SIZE=200
EMBEDDING_PROCESSING_ENABLED=true
EMBEDDING_PROCESSING_INTERVAL_HOURS=1

# LLM Provider Selection (ollama or openai)
LLM_PROVIDER=ollama

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=60.0
OLLAMA_MAX_RETRIES=3

# OpenAI Configuration (for cloud LLM)
# OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=60.0
OPENAI_MAX_RETRIES=3
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Chat Interface Configuration
CHAT_ENABLED=true
CHAT_HISTORY_LIMIT=1000
CHAT_CONTEXT_WINDOW=4000
CHAT_RESPONSE_TIMEOUT=30.0