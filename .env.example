# Limitless API Configuration
LIMITLESS_API_KEY=your key here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/lifeboard.log
LOG_CONSOLE_LOGGING=true

# Auto-sync Configuration
AUTO_SYNC_ENABLED=true
LIMITLESS_SYNC_INTERVAL_HOURS=1

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# LLM Provider Selection (ollama or openai)
LLM_PROVIDER=ollama

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=60.0
OLLAMA_MAX_RETRIES=3

# OpenAI Configuration (for cloud LLM)
# OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=60.0
OPENAI_MAX_RETRIES=3
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
