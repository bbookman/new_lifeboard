#USER CONFIGS
USERS_LANGUAGE=en
TIME_ZONE=America/New_York

# Limitless API Configuration (double underscores are not a typo)
LIMITLESS__API_KEY=your key here
LIMITLESS__BASE_URL=https://api.limitless.ai
LIMITLESS__MAX_RETRIES=4
LIMITLESS__RETRY_DELAY=1.0
LIMITLESS__REQUEST_TIMEOUT=30.0
LIMITLESS__RATE_LIMIT_MAX_DELAY=300
LIMITLESS__RESPECT_RETRY_AFTER=true
LIMITLESS__RATE_LIMIT_MAX_ROUNDS=3
LIMITLESS__RATE_LIMIT_ROUND_DELAY=30.0

# Limitless Search Configuration
LIMITLESS__SEARCH_ENABLED=true
LIMITLESS__SEARCH_WEIGHT=0.75

# Twitter
# TWITTER_BEARER_TOKEN=your token here

# TWITTER (X)
# Request export from twitter
# Import with UI Settings
# periodically request your twitter data
# DELETE_AFTER_IMPORT means the twitter export will be removed from \
# PATH_TO_TWITTER_DATA= WILL BE DEPRICATED
DELETE_AFTER_IMPORT=true

# Rapid API (news, weather, billboard charts..)
RAPID_API_KEY=your key here

# News API Configuration
TURN_ON_NEWS=true
NEWS_COUNTRY=US
UNIQUE_NEWS_ITEMS_PER_DAY=5
NEWS_ENDPOINT=real-time-news-data.p.rapidapi.com
NEWS_ITEMS_TO_RETRIEVE=20

# Weather API Configuration
WEATHER_ENDPOINT="easy-weather1.p.rapidapi.com/daily/5"
WEATHER__SYNC_INTERVAL_HOURS=6

#USER CONFIGS
# UNITS either standard or metric
USER_HOME_LATITUDE="34.2257"
USER_HOME_LOGITUDE="77.9447"
UNITS="standard"

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE_PATH=logs/lifeboard.log
LOG_CONSOLE_LOGGING=true

# Auto-sync Configuration
# request limitless update every X hours
# will only fetch new data if needed 

AUTO_SYNC_ENABLED=true
LIMITLESS__SYNC_INTERVAL_HOURS=3


# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# LLM Provider Selection (ollama or openai)
LLM_PROVIDER=ollama

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:latest
OLLAMA_TIMEOUT=60.0
OLLAMA_MAX_RETRIES=3

# OpenAI Configuration (for cloud LLM)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-3.5-turbo
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_TIMEOUT=60.0
# OPENAI_MAX_RETRIES=3
# OPENAI_MAX_TOKENS=1000
# OPENAI_TEMPERATURE=0.7

# Chat Interface Configuration
CHAT_HISTORY_LIMIT=1000
CHAT_CONTEXT_WINDOW=4000
CHAT_RESPONSE_TIMEOUT=30.0

# Startup Embedding Burst Configuration
EMBEDDING_STARTUP_BURST_ENABLED=true
EMBEDDING_STARTUP_BURST_LIMIT=1000
